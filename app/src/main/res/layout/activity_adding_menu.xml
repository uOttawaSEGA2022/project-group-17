<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#373430">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LoginLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="12"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:background="#FFC107"
                    android:gravity="center"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme"
                    app:title="                       Add New Item"
                    app:titleTextColor="#000000" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:translationY="0dp">

                <EditText
                    android:id="@+id/ItemName"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:ems="10"
                    android:hint="Meal Name"
                    android:inputType="textPersonName"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:translationY="0dp">

                <EditText
                    android:id="@+id/MealType"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:ems="10"
                    android:hint="Meal Type"
                    android:inputType="textPersonName"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:translationY="0dp">

                <EditText
                    android:id="@+id/Price"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:ems="10"
                    android:hint="Price"
                    android:inputType="textPassword"
                    android:textColor="#FFFFFF"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:translationY="0dp">

                <EditText
                    android:id="@+id/CusineType"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:ems="10"
                    android:hint="Cuisine"
                    android:inputType="textEmailAddress"
                    android:textColor="#FFFFFF"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:translationY="0dp">

                <EditText
                    android:id="@+id/IngredientsList"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:ems="10"
                    android:hint="Enter Ingredients..."
                    android:textColor="#FFFFFF"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/addIngredients"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Add Ingredients"
                    android:textColor="#FFC107" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Allergens"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:ems="10"
                    android:hint="Enter Allergens..."
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/addAllergens"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Add Allergens"
                    android:textColor="#FFC107" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="#FFC107"
                android:orientation="horizontal"
                android:translationY="0dp">

                <EditText
                    android:id="@+id/ServingSize"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:ems="10"
                    android:hint="Serving Size"
                    android:inputType="textPersonName"
                    android:textColor="#FFFFFF"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="#FFC107"
                android:orientation="horizontal"
                android:translationY="0dp">

                <EditText
                    android:id="@+id/Calories"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:ems="10"
                    android:hint="Calories"
                    android:inputType="textPersonName"
                    android:textColor="#FFFFFF"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="#FFC107"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:translationY="0dp"/>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="#FFC107"
                android:orientation="horizontal"
                android:translationY="0dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="horizontal">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Description"
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="Enter Description..."
                    android:inputType="textPersonName"
                    android:maxLength="3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="#FFC107"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:translationY="0dp">

                <Button
                    android:id="@+id/UploadImageButton"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Upload Meal Photo..."
                    android:textColor="#FFC107" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:id="@+id/RegisterConfirm"
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:translationY="0dp">

                <Button
                    android:id="@+id/AddNewItemButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:text="ADD MEAL!"
                    android:textColor="#000000" />
            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>