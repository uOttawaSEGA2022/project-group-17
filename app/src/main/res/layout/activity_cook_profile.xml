<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D709E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BBE7ED"
        android:orientation="vertical"
        android:weightSum="12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_weight="0.25"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/CookLogout"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:text="Logout"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cookProfilePic"
                android:layout_width="248dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/photo_of_chef"
                android:scaleType="fitStart"
                tools:ignore="ImageContrastCheck"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/cookName"
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/name_"
                    android:textColor="#0D709E"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/cookNameInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/name"
                    android:textSize="20sp"
                    android:translationX="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/cookEmail"
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/email"
                    android:textColor="#0D709E"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/cookEmailInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/email_"
                    android:textSize="20sp"
                    android:translationX="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">


                <TextView
                    android:id="@+id/cookPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:minLines="2"
                    android:text="@string/phone_nnumber"
                    android:textColor="#0D709E"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/cookPhoneNumberInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/phonenumber"
                    android:textSize="20sp"
                    android:translationX="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/cookAddress"
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/address_"
                    android:textColor="#0D709E"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/cookAddressInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/address"
                    android:textSize="20sp"
                    android:translationX="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/cookPostalCode"
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/postal_code"
                    android:textColor="#0D709E"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/cookPostalCodeInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/postalcode"
                    android:textSize="20sp"
                    android:translationX="5dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0"
            android:gravity="bottom|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cookProfileMenuButton"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/menu" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0"
            android:gravity="bottom|center"
            android:orientation="horizontal"
            android:weightSum="0">

            <Button
                android:id="@+id/cookProfileOrders"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text="@string/orders" />

        </LinearLayout>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/CookMenuToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#03A9F4"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:title="Profile"
            app:titleTextColor="#000000" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>