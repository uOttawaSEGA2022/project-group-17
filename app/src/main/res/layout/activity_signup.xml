<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#373430">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LoginLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="12"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFC107"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:title="                          Registration"
                app:titleTextColor="#000000" />



            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:translationY="0dp">

                <EditText
                    android:id="@+id/SignupFirstName"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:ems="10"
                    android:hint="First Name"
                    android:inputType="textPersonName"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:translationY="0dp">

                <EditText
                    android:id="@+id/SignupLastName"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:ems="10"
                    android:hint="Last Name"
                    android:inputType="textPersonName"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:translationY="0dp">

                <EditText
                    android:id="@+id/SignupPassword"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="#FFFFFF"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:translationY="0dp">

                <EditText
                    android:id="@+id/SignupEmail"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColor="#FFFFFF"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:translationY="0dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="80dp"
                    android:layout_height="37dp"
                    android:layout_weight="0"
                    android:gravity="bottom|center_vertical"
                    android:text="Phone:"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/firstPhone"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="(XXX)"
                    android:maxLength="3"
                    android:inputType="phone"
                    android:textColor="#FFFFFF"
                    tools:ignore="SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/secondPhone"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="XXX"
                    android:maxLength="3"
                    android:inputType="phone"
                    android:textColor="#FFFFFF"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="-" />

                <EditText
                    android:id="@+id/thirdPhone"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="XXXX"
                    android:maxLength="4"
                    android:inputType="phone"
                    android:textColor="#FFFFFF"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/SignupAddress"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:ems="10"
                    android:hint="Address"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="Postal Code: "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/pc1"
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="XXX"
                    android:maxLength="3"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/pc2"
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="XXX"
                    android:maxLength="3"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:translationY="0dp">

                <Spinner
                    android:id="@+id/SignupRole"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:entries="@array/AccountType"
                    android:minHeight="48dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/BankInfoDetails"
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#FFC107"
                android:orientation="horizontal"
                android:translationY="0dp" />

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="#FFC107"
                android:orientation="horizontal"
                android:translationY="0dp">

                <EditText
                    android:id="@+id/AccountOrCardNumber"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:ems="10"
                    android:hint="Account/Card Number"
                    android:inputType="textPersonName"
                    android:textColor="#FFFFFF"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="#FFC107"
                android:orientation="horizontal"
                android:translationY="0dp">

                <EditText
                    android:id="@+id/CCVorInstitution"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:ems="10"
                    android:hint="CCV/Institution"
                    android:inputType="textPersonName"
                    android:textColor="#FFFFFF"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="#FFC107"
                android:orientation="horizontal"
                android:translationY="0dp">

                <TextView
                    android:id="@+id/BranchNumberorExpiry"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text=" Enter Card Expiry:" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="#FFC107"
                android:orientation="horizontal"
                android:translationY="0dp">

                <EditText
                    android:id="@+id/MonthOrBranchNumber"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:ems="10"
                    android:hint="@string/month_branchnumber"
                    android:inputType="textPersonName"
                    android:textColor="#FFFFFF"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/Year"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:ems="10"
                    android:hint="Year"
                    android:inputType="textPersonName"
                    android:textColor="#FFFFFF"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/RegisterConfirm"
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:translationY="0dp">

                <Button
                    android:id="@+id/RegisterButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC107"
                    android:text="@string/register"
                    android:textColor="#000000" />
            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>