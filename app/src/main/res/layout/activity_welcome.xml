<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#373430">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="81dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"></LinearLayout>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="77dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="83dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Welcome"
            android:textAlignment="center"
            android:textColor="#FFC107"
            android:textSize="48sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="105dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="165dp"></LinearLayout>

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="99dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="271dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="to "
            android:textAlignment="center"
            android:textColor="#FFC107"
            android:textSize="48sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="326dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="371dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="274dp"
            app:srcCompat="@drawable/logos" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="418dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="You are logged in as:"
            android:textAlignment="center"
            android:textColor="#FFC107"
            android:textSize="40sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="407dp"
        android:layout_height="67dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="697dp">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/next"
        android:layout_width="409dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="765dp"></LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>