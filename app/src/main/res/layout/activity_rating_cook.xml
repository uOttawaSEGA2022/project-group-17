<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#373430"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/ratingCookToolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#FFC107"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:title="Rate this Cook:"
            app:titleTextColor="#373430" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:translationY="8dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="111dp"
                android:layout_weight="0"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="  Address:"
                        android:textColor="#FFC107" />

                    <TextView
                        android:id="@+id/chefaddress"
                        android:layout_width="210dp"
                        android:layout_height="20dp"
                        android:layout_weight="0"
                        android:text="TextView"
                        android:textColor="#FFC107"
                        android:translationX="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0">

                    <TextView
                        android:id="@+id/CookRating"
                        android:layout_width="63dp"
                        android:layout_height="20dp"
                        android:layout_weight="0"
                        android:text="  Rating:"
                        android:textColor="#FFC107" />

                    <TextView
                        android:id="@+id/chefrating"
                        android:layout_width="210dp"
                        android:layout_height="20dp"
                        android:layout_weight="0"
                        android:text="TextView"
                        android:textColor="#FFC107"
                        android:translationX="10dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:translationY="20dp">

            <TextView
                android:id="@+id/cookDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Description"
                android:textColor="#FFC107"
                android:textSize="24sp"
                android:translationY="-8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ratingNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Rating"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:translationY="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/rateCookDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Details"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:translationY="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_weight="0"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/submitRatingButton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:backgroundTint="#FFC107"
                android:text="Submit" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>