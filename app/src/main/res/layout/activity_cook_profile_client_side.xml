<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CookProfileClientSide">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#373430"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/CookMenuToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFC107"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:title="Profile"
                app:titleTextColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:layout_gravity="left"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:translationY="8dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="111dp"
                android:layout_weight="0"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="  Address:"
                        android:textColor="#FFC107" />

                    <TextView
                        android:id="@+id/chefaddress"
                        android:layout_width="210dp"
                        android:layout_height="20dp"
                        android:layout_weight="0"
                        android:text="TextView"
                        android:textColor="#FFC107"
                        android:translationX="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0">

                    <TextView
                        android:id="@+id/CookRating"
                        android:layout_width="63dp"
                        android:layout_height="20dp"
                        android:layout_weight="0"
                        android:text="  Rating:"
                        android:textColor="#FFC107" />

                    <TextView
                        android:id="@+id/chefrating"
                        android:layout_width="210dp"
                        android:layout_height="20dp"
                        android:layout_weight="0"
                        android:text="TextView"
                        android:textColor="#FFC107"
                        android:translationX="10dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:translationY="20dp" >

            <TextView
                android:id="@+id/cookDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Description"
                android:textColor="#FFC107"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ReportCookProfileClient"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:backgroundTint="#FF0000"
                android:text="Report" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:background="#00FFC107"
            android:backgroundTint="#FFC107"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:backgroundTint="#FFC107"
                android:text="Rate"
                android:textColor="#FFFFFF"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>