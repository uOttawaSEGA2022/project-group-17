<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BBE7ED"
        android:backgroundTint="#BBE7ED"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="395dp"
            android:layout_height="70dp"
            android:layout_weight="0"
            android:background="#00E91E63"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/adminLogoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:backgroundTint="#03A9F4"
                android:text="LOGOUT"
                android:textColor="#E4EBEC" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:translationY="-20dp">

            <TextView
                android:id="@+id/InboxText"
                android:layout_width="171dp"
                style="?android:listSeparatorTextViewStyle"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:text="Inbox"
                android:textColor="#0D709E"
                android:textSize="50dp"
                android:translationX="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="532dp"
            android:orientation="horizontal"
            android:translationY="-20dp">

            <ScrollView
                android:id="@+id/listOfComplaints"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ListView
                        android:id="@+id/list_of_complaints"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="#0d709e"
                        android:dividerHeight="2dp"
                        android:headerDividersEnabled="true" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>